<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pizza.CreateController">
   <children>
      <Label text="Create Account">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Label text="Username" />
      <TextField prefHeight="25.0" prefWidth="256.0" promptText="Username" />
      <Label text="Password" />
      <TextField promptText="Password" />
      <Button mnemonicParsing="false" text="Create Account" />
      <Button fx:id="toLoginButton" mnemonicParsing="false" onAction="#LoginPageButton" text="Back To Log In" />
      <Button fx:id="asGuestButton" mnemonicParsing="false" onAction="#ContinueButton" text="Continue as Guest" />
   </children>
</VBox>
